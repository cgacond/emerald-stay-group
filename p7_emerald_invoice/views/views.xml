<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <report
            id="emerald_invoice_format"
            model="account.invoice"
            string="Emerald Invoice"
            report_type="qweb-pdf"
            name="p7_emerald_invoice.report_invoice_emerald"
            file="p7_emerald_invoice.report_invoice_emerald"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
        />

    <!-- Adding new field in vendor form -->
    <record model="ir.ui.view" id="p7_vednor_bills_inherited_for_property">
        <field name="name">p7.vendors.bill.property</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">

          <xpath expr="//field[@name='vendor_bill_id']" position="after">
            <field name="p7_property"/>
          </xpath>
        </field>
      </record>


  </data>
</odoo>